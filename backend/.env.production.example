# Production Environment Variables for Railway
# Copy this to Railway's environment variables dashboard

# Database (Railway will auto-populate this when you add PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Auth - IMPORTANT: Generate new secure secrets for production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# API
PORT=3001
NODE_ENV="production"
# Add your Vercel frontend URL here after deploying
CORS_ORIGIN="https://your-app.vercel.app"

# External APIs (Optional - add when ready)
STRAVA_CLIENT_ID=""
STRAVA_CLIENT_SECRET=""
OPENWEATHER_API_KEY=""
